<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/main_BTN_AttackHero1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="100dp"

            android:text="Attack" />

        <Button
            android:id="@+id/main_BTN_AttackHero2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/main_BTN_AttackHero1"
            android:layout_alignEnd="@+id/main_BTN_AttackHero1"

            android:text="Attack" />

        <Button
            android:id="@+id/main_BTN_AttackHero3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-147dp"
            android:layout_below="@+id/main_BTN_AttackHero2"
            android:layout_alignEnd="@+id/main_BTN_AttackHero2"
            android:layout_marginStart="40dp"
            android:text="Attack" />

        <ImageView
            android:id="@+id/main_IMG_Hero"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />


    </RelativeLayout>

    <Button
            android:id="@+id/main_BTN_AttackVillains1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack"
            tools:layout_editor_absoluteX="507dp"
            tools:layout_editor_absoluteY="118dp" />

    <Button
        android:id="@+id/main_BTN_AttackVillains2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        tools:layout_editor_absoluteX="507dp"
        tools:layout_editor_absoluteY="194dp" />

    <Button
        android:id="@+id/main_BTN_AttackVillains3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        tools:layout_editor_absoluteX="507dp"
        tools:layout_editor_absoluteY="264dp" />

        <ImageView
        android:id="@+id/main_IMG_Villains"
        android:layout_width="85dp"
        android:layout_height="113dp"
        tools:layout_editor_absoluteX="612dp"
        tools:layout_editor_absoluteY="151dp"
        tools:srcCompat="@tools:sample/avatars" />

    <SeekBar
        android:id="@+id/main_SKB_Hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="118dp" />

    <SeekBar
        android:id="@+id/main_SKB_Villains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="634dp"
        tools:layout_editor_absoluteY="116dp" />


</androidx.constraintlayout.widget.ConstraintLayout>