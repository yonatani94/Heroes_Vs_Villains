<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
></ImageView>
    <ImageView
        android:id="@+id/main_IMG_Hero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <ProgressBar
            android:id="@+id/main_PGB_Hero"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/main_IMG_Hero"
            android:paddingHorizontal="20dp"
         android:layout_marginTop="-50dp"
            android:tag="human"
            android:progress="300"
            android:min="0"
            android:max="300"
        android:progressDrawable="@drawable/greenprogress"
            />



    <TextView
        android:id="@+id/main_TXT_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Random num"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70sp"
        ></TextView>
    <TextView
        android:id="@+id/main_TXT_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_TXT_random"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:hint="First player"
        ></TextView>

    <Button
        android:id="@+id/main_BTN_AttackHero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/main_IMG_Hero"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="80dp"
            android:tag="attackH1"
        android:text="knife" />

    <Button
        android:id="@+id/main_BTN_AttackHero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/main_BTN_AttackHero1"
        android:layout_alignStart="@+id/main_BTN_AttackHero1"
        android:layout_marginBottom="-67dp"
        android:text="Fire-Ball"
        android:tag="attackH2"
        />

    <Button
        android:id="@+id/main_BTN_AttackHero3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_BTN_AttackHero2"
        android:layout_alignStart="@+id/main_BTN_AttackHero1"
        android:layout_marginBottom="-67dp"
        android:tag="attackH3"

        android:text="Rasengan" />

    <ProgressBar
        android:id="@+id/main_PGB_Villains"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_IMG_Villains"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="-50dp"
        android:layout_alignParentRight="true"
        android:tag="alien"
        android:progress="300"
        android:max="300"
        android:progressDrawable="@drawable/greenprogress" />

    <ImageView
        android:id="@+id/main_IMG_Villains"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         />


    <Button
            android:id="@+id/main_BTN_AttackVillains1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sword"
        android:layout_toLeftOf="@+id/main_IMG_Villains"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="80dp"
        android:tag="attackV1"

        />

    <Button
        android:id="@+id/main_BTN_AttackVillains2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chidori-Light"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/main_BTN_AttackVillains1"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="-67dp"
        android:tag="attackV2"

        />

    <Button
        android:id="@+id/main_BTN_AttackVillains3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rinnegan"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/main_BTN_AttackVillains2"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="-67dp"
        android:tag="attackV3"

        />




</RelativeLayout>

